{
  "displayName":    "P#",
  "name":           "psharp",
  "mimeTypes":      ["text/psharp"],
  "fileExtensions": ["psharp"],


  "lineComment":      "// ",
  "blockCommentStart": "/*",
  "blockCommentEnd":   "*/",




  "keywords": [
    "include","main","start",
    "new","create","assert","send","monitor","raise","halt","default","typeof",
    "while","for","foreach","if","else","break","continue","return",
    "this","null","trigger","payload","pop",
    "public","protected","private","internal",
    "static","virtual","abstract","override",
    "true","false",
    "namespace","class","event","machine","model","action","state",
    "entry","exit","defer","ignore",
    "goto","push","on","do","with","in","as"
  ],

  "typeKeywords": [
    "var","void","int","float","double","bool","string"
  ],

  "operators": [
    "=", ">", "<", "!", ":", "==", "<=", ">=", "!=",
    "&&", "||",  "+", "-", "*", "/", "%",
    "+=", "-=", "*=",
    "$"
  ],


  "symbols":  "[=><!:&|+\\-*\\/%\\$]+",


  "escapes": "\\\\(?:[abfnrtv\\\\\"']|x[0-9A-Fa-f]{1,4}|u[0-9A-Fa-f]{4}|U[0-9A-Fa-f]{8})",


  "tokenizer": {
    "root": [

      ["[a-z_$][\\w$]*", { "cases": { "@typeKeywords": "keyword",
        "@keywords": "keyword",
        "@default": "identifier" } }],
        ["[A-Z][\\w\\$]*", "type.identifier" ],


        { "include": "@whitespace" },


        ["[{}()\\[\\]]", "@brackets"],
        ["@symbols", { "cases": { "@operators": "operator",
          "@default"  : "" } } ],


          ["\\d*\\.\\d+([eE][\\-+]?\\d+)?", "number.float"],
          ["0[xX][0-9a-fA-F]+", "number.hex"],
          ["\\d+", "number"],


          ["[;,.]", "delimiter"],


          ["\"([^\"\\\\]|\\\\.)*$", "string.invalid" ],
          ["\"",  { "token": "string.quote", "bracket": "@open", "next": "@string" } ],


          ["'[^\\\\']'", "string"],
          ["(')(@escapes)(')", ["string","string.escape","string"]],
          ["'", "string.invalid"]
        ],

        "comment": [
          ["[^\\/*]+", "comment" ],
          ["\\/\\*",    "comment", "@push" ],
          ["\\*/",    "comment", "@pop"  ],
          ["[\\/*]",   "comment" ]
        ],

        "string": [
          ["[^\\\\\"]+",  "string"],
          ["@escapes", "string.escape"],
          ["\\\\.",      "string.escape.invalid"],
          ["\"",        { "token": "string.quote", "bracket": "@close", "next": "@pop" } ]
        ],

        "whitespace": [
          ["[ \\t\\r\\n]+", "white"],
          ["\\/\\*",       "comment", "@comment" ],
          ["\\/\\/.*$",    "comment"]
        ]
      }
    }
