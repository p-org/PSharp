namespace DistributedPingPong
{
    machine Server
    {	
        machine Client;

        start state Init
        {
            entry
            {
                this.Client = remote(Client, this);
                raise(Unit);
            }

            on Unit goto Playing;
        }
		
        state Playing
        {
            entry
            {
                send(this.Client, Pong);
            }

            on Unit do SendPong;
            on Ping do SendPong;
        }

        void SendPong()
        {
            send(this.Client, Pong);
        }
    }
}
