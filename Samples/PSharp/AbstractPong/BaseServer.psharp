namespace AbstractPong
{
	internal event Unit;

    internal abstract machine BaseServer
    {
		protected string Text;

        private start state Init
        {
			entry
			{
				Text = "Hello";
				raise(Unit);
			}

			on Unit goto Second;
        }

		private state Second
		{
			entry
			{
				Text += ", ";
				raise(Unit);
			}

			on Unit do Foo;
		}

		protected abstract void Foo();
    }
}
