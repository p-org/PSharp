namespace MultiPaxos
{
    machine Timer
    {
	    machine Target;
		
		int TimeoutValue;

	    start state Init
		{
		    entry
			{
			    Target = payload[0] as machine;
				TimeoutValue = (int)payload[1];
				raise(local);
			}

			on local goto Loop;
		}

		state Loop
		{
		    ignore cancelTimer;
			on startTimer goto TimerStarted;
		}

		state TimerStarted
		{
		    ignore startTimer;

		    entry
			{
			    send(Target, timeout, this);
			}

			on local goto Loop;
			on cancelTimer goto Loop;
		}
    }
}
